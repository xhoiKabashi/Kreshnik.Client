@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public int NewLevel { get; set; }
    [Parameter] public int HpIncrease { get; set; }
    [Parameter] public int DmgIncrease { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}

<div class="@($"fixed inset-0  z-40  flex items-center justify-center { (IsVisible ? "block" : "hidden") }")">
    <div class="bg-black border-4 border-yellow-400 p-6 rounded-lg text-center max-w-sm w-full pixelated  z-50">
        <div class="text-yellow-400 text-3xl mb-4 animate-pulse">LEVEL UP!</div>
        <div class="bg-gray-800 border-2 border-gray-600 p-4 rounded-lg mb-4">
            <p class="text-white text-xl mb-2">You are now level <span class="text-green-400">@NewLevel</span>!</p>
        </div>
        <div class="grid grid-cols-2 gap-4 mb-4">
            <div class="bg-red-900 border-2 border-red-700 p-2 rounded-lg">
                <p class="text-red-400 text-sm">HP +@HpIncrease</p>
            </div>
            <div class="bg-blue-900 border-2 border-blue-700 p-2 rounded-lg">
                <p class="text-blue-400 text-sm">DMG +@DmgIncrease</p>
            </div>
        </div>
        <button @onclick="@OnClose"
            class="bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-lg transition duration-200 transform hover:scale-105">
            OK!
        </button>
    </div>
</div>